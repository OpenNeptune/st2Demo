<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
	<!-- 使用基于字段的验证 -->
    <field name="id">
    	<field-validator type="required">
    		<message>ID字段不能为空</message>
    	</field-validator>
         <field-validator type="int" short-circuit="true">
             <param name="min">16</param>
             <param name="max">80</param>
             <message>提示：ID needs to be between ${min} and ${max}</message>
         </field-validator>
     </field>

     <field name="username">
         <field-validator type="requiredstring"  short-circuit="true">
         	 <param name="trim">true</param>
             <message>提示：username is required</message>
         </field-validator>
     </field>
     
      <field name="password">
         <field-validator type="requiredstring"  short-circuit="true">
         	 <param name="trim">true</param>
             <message>提示：password is required</message>
         </field-validator>
     </field>
     
      <field name="role">
         <field-validator type="requiredstring"  short-circuit="true">
         	 <param name="trim">true</param>
             <message>提示：role is required</message>
         </field-validator>
     </field>
     
     <!-- 此处的Date验证器有问题 蛋疼 -->
     <field name="birht">
		<field-validator type="date">
			<param name="min">2014-01-01</param>
			<message>提示: birht 不能小于2014-01-01</message>
		</field-validator>
     </field>
</validators>
