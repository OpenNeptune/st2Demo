<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<package name="validation" namespace="/validation" extends="struts-default">
		<default-action-ref name="index" />
		<global-results>
			<result name="error">/error.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="error" />
		</global-exception-mappings>


		<!-- 一个最简单的输入验证 -->
		<action  name="helloage" class="st2Demo.validate.hello.Action.validateAction" method="execute">
			<result name="input">/validation/input_helloage.jsp</result>
			<result name="success">/success.jsp</result>
		</action>
		
	</package>
</struts>
